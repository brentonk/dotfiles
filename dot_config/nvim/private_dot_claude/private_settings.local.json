{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(domain:github.com)",
      "Bash(chmod:*)",
      "Bash(nvim:*)",
      "Bash(~/.claude/skills/chezmoi-sync/scripts/chezmoi-sync-auto.sh:*)",
      "Bash(git ls-remote:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "file_path=$(jq -r '.tool_input.file_path') && chezmoi re-add \"$file_path\" 2>/dev/null || chezmoi add \"$file_path\" 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
